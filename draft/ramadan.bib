@article{Biraro2009,
author = {Biraro, S and Shafer, L A and Kleinschmidt, I and Wolff, B and Karabalinde, A and Nalwoga, A and Musinguzi, J and Kirungi, W and Opio, A and Whitworth, J and Grosskurth, H},
title = {Is sexual risk taking behaviour changing in rural south-west Uganda? Behaviour trends in a rural population cohort 1993-2006},
