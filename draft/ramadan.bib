@article{Wolff2005,
author = {Wolff, Brent and Nyanzi, Barbara and Katongole, George and Ssesanga, Deo and Ruberantwari, Anthony and Whitworth, Jimmy},
title = {Evaluation of a home-based voluntary counselling and testing intervention in rural Uganda},
